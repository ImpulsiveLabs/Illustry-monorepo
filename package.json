{
  "name": "illustry-monorepo",
  "version": "1.0.0",
  "repository": "https://github.com/mrVladimirN/Illustry-monorepo.git",
  "author": "mrVladimirN <vladimir.nitu.business@outlook.com>",
  "license": "MIT",
  "workspaces": [
    "backend",
    "frontend",
    "docs",
    "types"
  ],
  "type": "module",
  "scripts": {
    "lint": "lerna run lint --stream",
    "lint:fix": "lerna run lint:fix --stream",
    "version": "standard-version",
    "depcheck": "lerna run depcheck",
    "test": "lerna run test --stream",
    "prepare": "husky install",
    "postversion": "lerna publish from-package",
    "build:ts": "lerna run build:ts --stream",
    "release": "yarn lint:fix && yarn version && git push --follow-tags origin main"
  },
  "devDependencies": {
    "@commitlint/cli": "17.4.4",
    "@commitlint/config-conventional": "17.4.4",
    "@illustry/types": "0.1.14",
    "@types/jest": "29.5.12",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "depcheck": "1.4.7",
    "eslint": "8.57.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "6.1.1",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "jest-junit": "16.0.0",
    "lerna": "8.1.8",
    "standard-version": "9.5.0",
    "ts-jest": "29.1.1",
    "typescript": "5.5.4"
  },
  "jest": {
    "collectCoverage": true,
    "roots": [
      "backend/",
      "frontend/",
      "types/",
      "docs/"
    ],
    "collectCoverageFrom": [
      "**/*.{js,ts}",
      "!coverage/**",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/commitlint.config.js"
    ],
    "transform": {
      ".+\\.ts$": "ts-jest"
    },
    "coverageReporters": [
      "text",
      "text-summary"
    ],
    "reporters": [
      "default"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "testEnvironment": "node"
  },
  "packageManager": "yarn@4.5.3"
}
