{
  "name": "@dxworks/illustry-server",
  "version": "0.0.1",
  "description": "A hub for visualizing data about software systems",
  "keywords": [
    "dxworks",
    "illustry",
    "visualisations",
    "charts"
  ],
  "license": "Apache-2.0",
  "author": "Vladimir Nitu",
  "main": "dist/app.js",
  "scripts": {
    "clean": "rm -rf ./dist",
    "compile": "tsc -p tsconfig.json",
    "build:ts":"npm run clean && npm run compile",
    "start:dev": "npm run build:ts && node ./dist/app-cli.js",
    "test": "jest --detectOpenHandles"
  },
  "dependencies": {
    "bluebird": "3.7.2",
    "bunyan": "1.8.15",
    "cors": "2.8.5",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "jest-junit": "16.0.0",
    "lodash": "4.17.21",
    "mongoose": "8.0.1",
    "multer": "1.4.2",
    "validator": "13.11.0",
    "xlsx-stream-reader": "1.1.1",
    "xml2js": "0.6.2",
    "zod": "3.22.4",
    "zod-error": "1.5.0"
  },
  "devDependencies": {
    "@illustry/types": "0.0.25",
    "@types/bluebird": "3.5.42",
    "@types/bunyan": "1.8.11",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.10",
    "@types/lodash": "4.14.201",
    "@types/mongoose": "5.11.97",
    "@types/node": "20.10.2",
    "@types/validator": "13.11.6",
    "@types/xml2js": "0.4.14",
    "jest": "29.7.0",
    "ts-jest": "29.1.1",
    "typescript": "5.3.2"
  },
  "jest": {
    "collectCoverage": true,
    "roots": [
      "__tests__"
    ],
    "collectCoverageFrom": [
      "**/*.{js,ts}",
      "!coverage/**",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/src/app-cli.ts"
    ],
    "transform": {
      ".+\\.ts$": "ts-jest"
    },
    "coverageDirectory": "<rootDir>/coverage",
    "coverageReporters": [
      "html",
      "text",
      "text-summary",
      "cobertura"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "testEnvironment": "node"
  }
}
