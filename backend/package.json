{
  "name": "@dxworks/illustry-server",
  "version": "0.0.1",
  "description": "A hub for visualizing data about software systems",
  "keywords": [
    "dxworks",
    "illustry",
    "visualizations",
    "charts"
  ],
  "license": "Apache-2.0",
  "author": "Vladimir Nitu",
  "main": "dist/app-cli.js",
  "scripts": {
    "clean": "rm -rf ./dist",
    "compile": "tsc -p tsconfig.json",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "depcheck": "depcheck --ignore-bin-package --ignores='jest,ts-jest,@types/jest,jest-junit,@commitlint/config-conventional,@commitlint/cli,standard-version,@typescript-eslint/parser,@typescript-eslint/eslint-plugin,eslint-config-airbnb-base,eslint-plugin-import,eslint-plugin-node,eslint-plugin-promise'",
    "build:ts": " npm run clean && npm run compile",
    "start:dev": "npm run build:ts && node ./dist/src/app-cli.js",
    "start:prod": "node ./build-dist/illustry.js",
    "test": "jest --detectOpenHandles",
    "webpack": "webpack --config webpack.config.js"
  },
  "dependencies": {
    "@illustry/types": "0.1.9",
    "bunyan": "1.8.15",
    "cors": "2.8.5",
    "dotenv": "16.3.1",
    "express": "4.21.0",
    "mongoose": "8.0.1",
    "multer": "1.4.2",
    "validator": "13.11.0",
    "xlsx-stream-reader": "1.1.1",
    "xml2js": "0.6.2"
  },
  "devDependencies": {
    "@types/bunyan": "1.8.11",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.12",
    "@types/mongoose": "5.11.97",
    "@types/multer": "1.4.12",
    "@types/node": "20.10.2",
    "@types/validator": "13.11.6",
    "@types/xml2js": "0.4.14",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "commitlint": "18.4.3",
    "depcheck": "1.4.7",
    "eslint": "8.57.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "6.1.1",
    "jest": "29.7.0",
    "jest-junit": "16.0.0",
    "lint-staged": "15.2.10",
    "pm2": "5.4.2",
    "shebang-loader": "0.0.1",
    "terser-webpack-plugin": "5.3.9",
    "ts-jest": "29.1.1",
    "ts-loader": "9.5.1",
    "typescript": "5.5.4",
    "webpack": "5.94.0",
    "webpack-cli": "5.1.4"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "git add"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "roots": [
      "<rootDir>/__tests__"
    ],
    "collectCoverageFrom": [
      "**/*.{js,ts}",
      "!coverage/**",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/src/app-cli.ts"
    ],
    "transform": {
      ".+\\.ts$": "ts-jest"
    },
    "coverageReporters": [
      "text",
      "text-summary"
    ],
    "reporters": [
      "default"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "testEnvironment": "node"
  }
}
